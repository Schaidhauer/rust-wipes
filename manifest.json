{
  "name": "Rust wipes",
  "description": "Rust wipes notificator",
  "manifest_version": 2,
  "default_locale":"en",
  "options_page": "views/options.html",
  "options_ui": {
    "page": "views/options.html",
    "chrome_style": true
  },
  "version": "2.0.0",
  "background": {
    "scripts": ["javascript/background.js","javascript/jquery.min.js"],
    "persistent": false
  },
  "permissions": [
    "notifications",
	"https://www.battlemetrics.com/servers/search?dir=desc&game=rust&page=1&sort=details.rust_last_wipe"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Rust wipes"
  },
  "icons": {
    "128": "images/icon-128.png",
    "48": "images/icon-48.png",
    "16":"images/icon-16.png"
  }
}
